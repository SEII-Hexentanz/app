<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/dice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingStart="23dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/diceImage"
            android:layout_width="129dp"
            android:layout_height="129dp"
            android:layout_marginTop="95dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/inital_dice" />

        <Button
            android:id="@+id/continueButtonDiceFragment"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:text="@string/continueButtonDiceFragment"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cheatButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="@string/cheatButton"
            android:textSize="20sp" />
        <!-- Dice ImageView and Result Display -->


            <TextView
                android:id="@+id/closeButton"
                android:layout_width="63dp"
                android:layout_height="76dp"
                android:layout_gravity="end|top"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:padding="8dp"
                android:text="X"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:visibility="visible" />


        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/diceResult"
        android:layout_width="243dp"
        android:layout_height="230dp"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="200dp" />



    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentDice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible" />

</LinearLayout>


    </LinearLayout>
