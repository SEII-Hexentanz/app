<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Buttons and Player TextView Container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="8dp">

        <Button
            android:id="@+id/cheatButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/cheatButton"
            android:textSize="12sp"
            android:alpha="0.3"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/currentPlayer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/currPlayer"
            android:textSize="18sp"
            android:gravity="center" />

        <Button
            android:id="@+id/continueButtonDiceFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/continueButtonDiceFragment"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Dice ImageView and Result Display -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:padding="8dp">

        <ImageView
            android:id="@+id/diceImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/inital_dice" />

        <TextView
            android:id="@+id/diceResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="24sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Optional Fragment Container or Additional UI -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView2"
        android:name="com.example.frontend.LobbyFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone" />
</LinearLayout>
