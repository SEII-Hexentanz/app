<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="23dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/diceImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/inital_dice" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/continueButtonDiceFragment"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:text="@string/continueButtonDiceFragment"
            android:textSize="10sp" />

        <Button
            android:id="@+id/cheatButton"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:text="@string/cheatButton"
            android:textSize="10sp"
            android:alpha="0.3" />
        <Button
            android:id="@+id/rollDiceBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:text="Roll"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/diceResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView2"
        android:name="com.example.frontend.LobbyFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>
